# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4
indent_style = space

[*.{md,markdown}]
trim_trailing_whitespace = false

[Makefile]
indent_size = 4
indent_style = tab

[*.xml]
indent_size = 4
indent_style = tab
